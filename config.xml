<?xml version="1.0" encoding="UTF-8"?>
	<widget xmlns = "http://www.w3.org/ns/widgets"
		xmlns:gap = "http://phonegap.com/ns/1.0"
		id        = "com.org.medcab"
		xmlns:android   = "http://schemas.android.com/apk/res/android"
		versionCode = "3" 
        version     = "3.0.1" >
		<name short="THE MEDICINE CABINET">THE MEDICINE CABINET</name>
		<description>
			Refill Application for The Medicine Cabinet Pharmacies
		</description>
		<author href="http://www.davidsheffield.org" email="jeremiah.sheffield@gmail.com">
			David Sheffield
		</author>

		<gap:platform name="ios" />
		<gap:platform name="android" />
		
		<icon src="icon.png" />
		    
		<!-- IOS 7 -->
		<!-- iPhone / iPod Touch  -->
        <icon src="icon-60.png" gap:platform="ios" width="60" height="60" />
        <icon src="icon-60@2x.png" gap:platform="ios" width="120" height="120" />
        <!-- iPad -->
        <icon src="icon-76.png" gap:platform="ios" width="76" height="76" />
        <icon src="icon-76@2x.png" gap:platform="ios" width="152" height="152" />
        <!-- Settings Icon -->
        <icon src="icon-small.png" gap:platform="ios" width="29" height="29" />
        <icon src="icon-small@2x.png" gap:platform="ios" width="58" height="58" />
        <!-- Spotlight Icon -->
        <icon src="icon-40.png" gap:platform="ios" width="40" height="40" />
        <icon src="icon-40@2x.png" gap:platform="ios" width="80" height="80" />
        <!-- /IOS 7 -->
        
        <!-- IOS 6.1 -->
        <!-- iPhone / iPod Touch -->
        <icon src="icon.png" gap:platform="ios" width="57" height="57" />
        <icon src="icon@2x.png" gap:platform="ios" width="114" height="114" />
        <!-- iPad -->
        <icon src="icon-72.png" gap:platform="ios" width="72" height="72" />
        <icon src="icon-72@2x.png" gap:platform="ios" width="144" height="144" />
        <!-- iPhone Spotlight and Settings Icon -->
        <icon src="icon-small.png" gap:platform="ios" width="29" height="29" />
        <icon src="icon-small@2x.png" gap:platform="ios" width="58" height="58" />
        <!-- iPad Spotlight and Settings Icon -->
        <icon src="icon-50.png" gap:platform="ios" width="50" height="50" />
        <icon src="icon-50@2x.png" gap:platform="ios" width="100" height="100" />
        <!-- / IOS 6.1 -->
        
        <!-- Android Images -->
        <icon src="ldpi.png" gap:platform="android" gap:qualifier="ldpi" />
        <icon src="mdpi.png" gap:platform="android" gap:qualifier="mdpi" />
        <icon src="hdpi.png" gap:platform="android" gap:qualifier="hdpi" />
        <icon src="xhdpi.png" gap:platform="android" gap:qualifier="xhdpi" />
        <icon src="xxhdpi.png" gap:platform="android" gap:qualifier="xxhdpi" />
        <!-- /Android Images -->
        
        <!-- IOS Splash Screens -->
            <!-- iPhone and iPod touch -->
            <gap:splash src="images/splash/ios_splash_320w_480h.png" gap:platform="ios" width="320" height="480" />
            <gap:splash src="images/splash/ios_splash_640w_960h.png" gap:platform="ios" width="640" height="960" />
            <!-- iPhone 5 / iPod Touch (5th Generation) -->
            <gap:splash src="images/splash/ios_splash_640w_1136h.png" gap:platform="ios" width="640" height="1136" />
            <!-- iPad -->
            <gap:splash src="images/splash/ios_splash_768w_1024h.png" gap:platform="ios" width="768" height="1024" />
            <gap:splash src="images/splash/ios_splash_1024w_768h.png" gap:platform="ios" width="1024" height="768" />
            <!-- Retina iPad -->
            <gap:splash src="images/splash/ios_splash_1536w_2048h.png" gap:platform="ios" width="1536" height="2048" />
            <gap:splash src="images/splash/ios_splash_2048w_1536h.png" gap:platform="ios" width="2048" height="1536" />
        <!-- /IOS Splash Screens -->
	    
	    <gap:plugin name="com.phonegap.plugins.childbrowser" source="npm" />
		<gap:plugin name="org.apache.cordova.dialogs" source="npm" /><!--Works Fine-->
		<gap:plugin name="org.apache.cordova.device" source="npm" /><!--Works Fine-->
		<gap:plugin name="org.apache.cordova.vibration" source="npm" />
		
		<content src="index.html" />
		
        <access origin="*" />
		        
	</widget>
